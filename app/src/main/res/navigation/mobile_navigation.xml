<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.smartcart.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_shopping"
            app:destination="@id/navigation_shopping" />
        <action
            android:id="@+id/action_navigation_home_to_not_shopping"
            app:destination="@id/navigation_not_shopping" />
        <action
            android:id="@+id/action_navigation_home_to_camera"
            app:destination="@id/navigation_camera" />
    </fragment>
    <fragment
        android:id="@+id/navigation_shopping"
        android:name="com.example.smartcart.ui.shopping.ShoppingFragment"
        android:label="ShoppingList"
        tools:layout="@layout/fragment_shopping" >
        <action
            android:id="@+id/action_navigation_shopping_to_navigation_search"
            app:destination="@id/navigation_search" />
    </fragment>
    <fragment
        android:id="@+id/navigation_not_shopping"
        android:name="com.example.smartcart.ui.not_shopping.NotShoppingFragment"
        android:label="fragment_not_shopping"
        tools:layout="@layout/fragment_not_shopping" />
    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.example.smartcart.ui.camera.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" >
        <action
            android:id="@+id/action_navigation_camera_to_navigation_weight"
            app:destination="@id/navigation_weight" />
    </fragment>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.smartcart.ui.search.ItemSearchFragment"
        android:label="ItemSearchFragment">
        <action
            android:id="@+id/action_navigation_search_to_navigation_shopping"
            app:destination="@id/navigation_shopping" />
    </fragment>
    <fragment
        android:id="@+id/navigation_weight"
        android:name="com.example.smartcart.ui.camera.WeightFragment"
        android:label="fragment_weight"
        tools:layout="@layout/fragment_weight" >
        <action
            android:id="@+id/action_navigation_weight_to_navigation_camera"
            app:destination="@id/navigation_camera" />
    </fragment>

</navigation>